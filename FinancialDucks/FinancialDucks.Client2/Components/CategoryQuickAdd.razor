@using FinancialDucks.Application.Extensions
<div class="modal fade" id="@(nameof(CategoryQuickAdd))" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5>Quick Add Category</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cancel"></button>
      </div>
        <div class="modal-body">
            <form>
                <div class="form-group row">
                    <label for="descriptionContains" class="col-sm-2 col-form-label">Match Text</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control-plaintext" id="descriptionContains" @bind="Text">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="categoryFilter" class="col-sm-2 col-form-label">Category</label>
                    <div class="col-sm-10" id="categoryFilter">
                        <CategoryFilter OnCategorySelected="(c)=>Category=c" SelectedCategory="InitialCategory" />
                    </div>
                </div>
                <div class="form-group row">
                    @if (NewCategoryName.IsNonEmpty())
                    {
                        <label for="newCategory" class="col-sm-2 col-form-label">New Category</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control-plaintext" id="newCategory" @bind="NewCategoryName">
                        </div>
                    }
                    else
                    {
                        <button type="button" class="btn btn-primary" @onclick="NewCategoryButton_Click">New Category</button>       
                    }
                </div>
            </form>
        </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" @onclick="Cancel" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" @onclick="async ()=>await SaveChanges()" data-bs-dismiss="modal">Create</button>
      </div>
    </div>
  </div>
</div>