@using FinancialDucks.Application.Extensions
@using FinancialDucks.Application.Models.AppModels
@inherits ComponentBase


<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Credits</th>
            <th>Debits</th>
            <th>Net</th>
            <th>Running Net</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Items.NullToEmpty())
        {
            <tr>
                <td>@item.PeriodStart.ToShortDateString()</td>
                <td><NeutralCurrencyLabel Amount="@item.CreditAmount" /></td>
                <td><NeutralCurrencyLabel Amount="@item.DebitAmount" /></td>
                <td><CurrencyLabel Amount="@item.Net" /></td>
                <td><CurrencyLabel Amount="RunningNet(item)" /></td>
            </tr>
        }        
    </tbody>
</table>